<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.timeline.TimeLineFragment">

    <EditText
        android:id="@+id/edtNameUser"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_tory_blue"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_me"
        android:enabled="false"
        android:padding="@dimen/padding_10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEmailUser"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_tory_blue"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_email"
        android:enabled="false"
        android:padding="@dimen/padding_10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintTop_toBottomOf="@+id/edtNameUser"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edtAddressUser"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_tory_blue"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_location"
        android:enabled="false"
        android:padding="@dimen/padding_10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailUser"
        tools:layout_editor_absoluteX="0dp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAddressUser">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_tory_blue"
            app:tabTextColor="@android:color/white" />
    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>
