<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">@dimen/padding_10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextName">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">@dimen/padding_10dp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
